<%= form_for(@livevideo) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
    <%= f.text_area :information, placeholder: "Description for Livevideo...", class: "description" %>
    <%= f.text_area :location, placeholder: "Location for Livevideo...", class: "location" %>
  <%= f.submit "Create Live video", class: "btn btn-large btn-primary createsubmit" %>
<% end %>
